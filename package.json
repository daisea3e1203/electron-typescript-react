{
  "name": "handmade-electron-react-typescript-boilerplate",
  "version": "0.0.1",
  "description": "boilerplate with electron, react and typescript",
  "main": "dist/electron.js",
  "author": "dabinlapau",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "concurrently \"yarn watch\" \"yarn start-window\"",
    "electron-pack": "yarn build && rm -drf ./electron-dist/* && node build.js",
    "watch": "webpack-dev-server --config ./config/webpack.dev.js --config-name renderer",
    "dev-main": "webpack --config ./config/webpack.dev.js --config-name main",
    "run-electron": "./node_modules/.bin/electron .",
    "start-window": "yarn dev-main && yarn run-electron",
    "build-renderer": "webpack --config ./config/webpack.prod.js --config-name renderer",
    "build-main": "webpack --config ./config/webpack.prod.js --config-name main",
    "build": "yarn build-renderer && yarn build-main"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "papaparse": "^4.6.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/react-dom": "^16.8.4",
    "clean-webpack-plugin": "^2.0.1",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "csv-loader": "^3.0.2",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "react-test-renderer": "^16.8.6",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  }
}
